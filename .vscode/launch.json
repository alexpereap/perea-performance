    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend-Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": [
                "${workspaceFolder}/app/node_modules/**/*.js",
                "<node_internals>/**"
            ],
            "restart": true,
            "address": "localhost",
            "remoteRoot": "/app",
            "localRoot": "${workspaceFolder}/backend"
        }
    ]
}